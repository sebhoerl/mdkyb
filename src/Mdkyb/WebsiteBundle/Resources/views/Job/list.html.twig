{% extends 'MdkybWebsiteBundle::layout.html.twig' %}

{% block title 'Jobangebote' %}

{% block content %}

    <h1>JOBANGEBOTE</h1>

    <p>Hier findest du aktuellen Jobangebote von Kybernetikern f√ºr Kybernetiker!

    <h2>Jobs</h2>
    <table>
        <tr><th>ANGEBOT</th><th>BIS</th></tr>
        {% for job in jobs if job.type == 'job' %}
            <tr>
                <td>
                    <a href="{{ url('job_show', {id:job.id}) }}">{{ job.title }}</a>
                </td>
                <td>
                    {{ job.expiresAt|date('d.m.Y') }}
                </td>
            </tr>
        {% endfor %}
    </table>

    <h2>Praktika</h2>
    <table>
        <tr><th>ANGEBOT</th><th>BIS</th></tr>
        {% for job in jobs if job.type == 'training' %}
            <tr>
                <td>
                    <a href="{{ url('job_show', {id:job.id}) }}">{{ job.title }}</a>
                </td>
                <td>
                    {{ job.expiresAt|date('d.m.Y') }}
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}