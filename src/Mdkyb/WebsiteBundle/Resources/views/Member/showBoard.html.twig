{% extends 'MdkybWebsiteBundle::layout.html.twig' %}

{% block title "Vorstand" %}

{% block content %}
    <h1>VORSTAND</h1>

    <p>Hier werden die Vorstandsmitglieder vorgestellt.</p>

    {% for user in users %}
        <h2>{{ user.name }} ({% spaceless %}
            {% if user.function == 1 %}
                Vorsitz
            {% elseif user.function == 2 %}
                Stellv. Vorsitz
            {% elseif user.function == 3 %}
                Finanzen
            {% elseif user.function == 4 %}
                Schriftf√ºhrung
            {% endif %}
        {% endspaceless %})</h2>
        <p>
            {% if user.image is defined %}
                <img class="avatar" src="{{ asset('uploads/' ~ user.image.thumbname) }}" alt="" />
            {% endif %}
            {{ user.info }}
            <span style="clear:both;width:100%;display:block;"></span>
        </p>
    {% endfor %}

{% endblock %}