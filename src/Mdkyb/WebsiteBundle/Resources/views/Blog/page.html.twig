{% extends 'MdkybWebsiteBundle::layout.html.twig' %}

{% block title 'Blog' %}

{% block content %}

    <h1>Blog</h1>

    {% for post in posts %}
        <h2>{{ post.title }}</h2>
        {{ post.publishedAt|date('d.m.Y H:i:s') }}<br />
        {{ post.content }}
    {% endfor %}
    <br />
    {% if page > 1%}
        <a href="{{ url('blog_page', {page:page-1}) }}">Neuere Posts</a>
    {% endif %}
    {% if show_next %}
        <a href="{{ url('blog_page', {page:page+1}) }}">Ã„ltere Posts</a>
    {% endif %}

{% endblock %}