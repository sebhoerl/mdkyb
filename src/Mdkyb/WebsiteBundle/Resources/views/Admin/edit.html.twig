{% extends 'MdkybWebsiteBundle:Admin:layout.html.twig' %}

{% block content %}

    <a href="{{ url('index') }}">Startseite</a> |
    <a href="{{ url('admin_index') }}">Administration</a> &gt;
    <a href="{{ url('admin_list', {name:object_name}) }}">{{ object_name }}</a>
    <hr />

    {% if app.request.session.hasFlash('admin.edited') %}
        Object wurde editiert.
    {% endif %}

    {% if app.request.session.hasFlash('admin.created') %}
        Object wurde erstellt.
    {% endif %}

    {% if app.request.session.hasFlash('admin.registration') %}
        Registrierungs-Mail wurde verwendet!
    {% endif %}

    <form action="" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        <input type="submit" />
    </form>

    <hr />
    <a href="{{ url('admin_delete', {name:object_name, id: object_id}) }}">LÃ¶schen</a>
    {% for aname, action in object.actions %}
        <a href="{{ url('admin_action', {action:aname, id: object_id, name:object_name}) }}">{{ action.label }}</a>
    {% endfor %}
{% endblock %}